.bgcolor-white.pt1em.pb1em#contents
  #main_cnt_wrapper
    #yjContentsBody
      .yjContainer
        .form_box
          %h2
            mooovi0
            %span 新規登録
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .label
              = f.label :email
              = f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力"
            .label
              = f.label :password
              - if @validatable
                %i
                  #{@minimum_password_length} characters minimum
              = f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力"
            .label
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを入力（確認）"
            .submit
              .actions
                = f.submit "Sign up"

            .more_link_box
              = render "devise/shared/links"

.bgcolor-white.pt1em.pb1em#contents
  #main_cnt_wrapper
    #yjContentsBody
      .yjContainer
        .form_box
          %h2
            画像アイコンの編集
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = devise_error_messages!


            -#
              画像アイコンの変更のみを許可したい為、下記をコメントアウト
              .label
                = f.label :email
                = f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力"
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
              .label
                = f.label :password
                %br
                %i (leave blank if you don't want to change it)
                %br/
                = f.password_field :password, autocomplete: "off", placeholder: "パスワードを入力"
                - if @minimum_password_length
                  %em
                    (
                    = @minimum_password_length
                    characters minimum)
              .label
                = f.label :password_confirmation
                %br/
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを入力（確認）"
            -# 画像アイコンの変更のみを許可したい為、上記をコメントアウト

            .label
              = f.label :avatar,"画像アイコン選択"
              = f.file_field :avatar, autocomplete: "off"

            .label
              = f.label :current_password
              %br
              %i (確認の為、現在のパスワードの入力が必要となります。)
              = f.password_field :current_password, autocomplete: "off", placeholder: "現在のパスワードを入力"

            .submit
              .actions
                = f.submit "Update"
          %br
          = link_to "マイページへ戻る", "/users/#{@user.id}"

        -#
          初期記載をそのまま残し。
          %h3 Cancel my account
          %p
            Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
          = link_to "Back", :back
